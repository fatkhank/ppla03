<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start" >

    <RelativeLayout
        android:id="@+id/w_main_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ToggleButton
            android:id="@+id/w_main_select"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_blue"
            android:button="@drawable/main_select"
            android:maxHeight="95dp"
            android:textOff="@string/emptyString2"
            android:textOn="@string/emptyString2" />

        <ToggleButton
            android:id="@+id/w_main_draw"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/w_main_select"
            android:background="@drawable/button_purple"
            android:button="@drawable/main_draw"
            android:textOff="@string/emptyString2"
            android:textOn="@string/emptyString2" />

        <ToggleButton
            android:id="@+id/w_main_hand"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/w_main_draw"
            android:background="@drawable/button_pink"
            android:button="@drawable/main_hand"
            android:textOff="@string/emptyString2"
            android:textOn="@string/emptyString2" />

        <ToggleButton
            android:id="@+id/w_main_color"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/w_main_hand"
            android:background="@drawable/button_red"
            android:button="@drawable/main_color"
            android:textOff="@string/emptyString2"
            android:textOn="@string/emptyString2" />

        <ToggleButton
            android:id="@+id/w_main_stroke"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/w_main_color"
            android:background="@drawable/button_orange"
            android:button="@drawable/main_stroke"
            android:textOff="@string/emptyString2"
            android:textOn="@string/emptyString2" />

        <ImageButton
            android:id="@+id/w_draw_text"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/w_main_stroke"
            android:background="@drawable/button_green"
            android:src="@drawable/draw_text" />
    </RelativeLayout>

    <View
        android:id="@+id/w_rainbow_line"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/w_main_toolbar"
        android:background="@drawable/rainbow_line" />

    <com.ppla03.collapaint.CanvasView
        android:id="@+id/w_canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_rainbow_line" />

    <RelativeLayout
        android:id="@+id/w_additional_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/w_rainbow_line"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/w_sel_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:background="@drawable/button_pink"
            android:src="@drawable/sel_cut" />

        <ImageButton
            android:id="@+id/w_sel_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_sel_cut"
            android:background="@drawable/button_red"
            android:src="@drawable/sel_copy" />

        <ImageButton
            android:id="@+id/w_sel_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_sel_copy"
            android:background="@drawable/button_orange"
            android:src="@drawable/sel_move" />

        <ImageButton
            android:id="@+id/w_sel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_sel_move"
            android:background="@drawable/button_green"
            android:src="@drawable/sel_delete" />

        <ImageButton
            android:id="@+id/w_draw_rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:background="@drawable/button_blue"
            android:src="@drawable/draw_rect" />

        <ImageButton
            android:id="@+id/w_draw_oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_draw_rect"
            android:background="@drawable/button_purple"
            android:src="@drawable/draw_oval" />

        <ImageButton
            android:id="@+id/w_draw_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_draw_oval"
            android:background="@drawable/button_pink"
            android:src="@drawable/draw_polygon" />

        <ImageButton
            android:id="@+id/w_draw_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_draw_polygon"
            android:background="@drawable/button_red"
            android:src="@drawable/draw_line" />

        <ImageButton
            android:id="@+id/w_draw_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/w_draw_line"
            android:background="@drawable/button_orange"
            android:src="@drawable/draw_free" />

        <RelativeLayout
            android:id="@+id/w_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_bar"
            android:padding="5dp"
            android:paddingRight="10dp" >

            <RelativeLayout
                android:id="@+id/sdsdfdfd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/w_font_style_label"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="Font"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Spinner
                    android:id="@+id/w_font_style"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/w_font_style_label" />

                <ToggleButton
                    android:id="@+id/w_font_bold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_toRightOf="@+id/w_font_style"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/inset_bold"
                    android:checked="true"
                    android:paddingLeft="10dp"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <ToggleButton
                    android:id="@+id/w_font_italic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/w_font_bold"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/inset_italic"
                    android:checked="true"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <ToggleButton
                    android:id="@+id/w_font_underline"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/w_font_italic"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/inset_underline"
                    android:checked="true"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/w_font_size_label"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/w_font_underline"
                    android:gravity="center_vertical"
                    android:text="Size"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <SeekBar
                    android:id="@+id/w_font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@+id/w_font_size_text"
                    android:layout_toRightOf="@+id/w_font_size_label"
                    android:max="50" />

                <TextView
                    android:id="@+id/w_font_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="200dp"
                    android:gravity="center_vertical"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </RelativeLayout>

            <TextView
                android:id="@+id/w_stroke_style_label"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Style"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/w_stroke_style"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/w_stroke_style_label" />

            <TextView
                android:id="@+id/w_stroke_width_label"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/w_stroke_style"
                android:gravity="center_vertical"
                android:text="Width"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <SeekBar
                android:id="@+id/w_stroke_width"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/w_stroke_width_label"
                android:max="72"
                android:progress="1" />

            <TextView
                android:id="@+id/w_stroke_width_text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/w_stroke_width"
                android:ems="3"
                android:gravity="center_vertical"
                android:text="1" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/w_ccl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_white"
            android:src="@drawable/cancel" />

        <ImageButton
            android:id="@+id/w_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/w_ccl"
            android:background="@drawable/button_white"
            android:src="@drawable/approve" />
    </RelativeLayout>

    <View
        android:id="@+id/w_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loader_cover"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/w_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/w_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w_progress"
        android:layout_centerHorizontal="true"
        android:text="@string/w_progress_participant"
        android:textAppearance="@android:style/TextAppearance.Large.Inverse" />

</RelativeLayout>