<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:textAlignment="center" >

    <RelativeLayout
        android:id="@+id/d_parti_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/d_title"
        android:padding="4dp" >

        <TextView
            android:id="@+id/d_text_parti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/d_parti_reload"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="Participant"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/d_parti_list"
            android:layout_width="226dp"
            android:layout_height="174dp"
            android:layout_above="@+id/d_insert_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/d_parti_reload"
            android:layout_marginBottom="8dp" >
        </ListView>

        <EditText
            android:id="@+id/d_insert_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/d_add_user"
            android:hint="Insert email here"
            android:inputType="textEmailAddress"
            android:textColor="@color/dark" />

        <ImageButton
            android:id="@+id/d_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/d_insert_email"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/d_insert_email"
            android:layout_margin="4dp"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_add_user" />

        <TextView
            android:id="@+id/d_parti_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/d_parti_reload"
            android:layout_centerHorizontal="true"
            android:text="Failed to fetch list"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/d_parti_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_action_refresh_dark"
            android:textColor="@color/dark" />

        <ProgressBar
            android:id="@+id/d_participant_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/d_title"
        android:layout_width="@dimen/d_options_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#eeeeee"
        android:paddingBottom="8dp" >

        <RelativeLayout
            android:id="@+id/d_report_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d_divider_second_content" >

            <TextView
                android:id="@+id/d_report_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="State the bug : "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/d_report_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/d_report_send"
                android:layout_below="@+id/d_report_title"
                android:layout_margin="4dp"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/d_report_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_textbox_dark"
                android:padding="4dp"
                android:text="Send"
                android:textColor="@color/dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/d_setting_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/d_divider_second_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/d_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Resize canvas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/d_setting_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="x"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark" />

            <Button
                android:id="@+id/d_button_resize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_textbox_dark"
                android:gravity="center_vertical|center_horizontal|start"
                android:padding="4dp"
                android:text="Resize"
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/d_width_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/d_setting_x"
                android:ems="10"
                android:imeOptions="actionDone|flagNoFullscreen"
                android:inputType="number"
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/d_height_input"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/d_width_input"
                android:layout_alignBottom="@+id/d_width_input"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/d_setting_x"
                android:ems="10"
                android:imeOptions="actionDone|flagNoFullscreen"
                android:inputType="number"
                android:textColor="@color/dark" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/d_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:padding="4dp" >

            <CheckBox
                android:id="@+id/d_button_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.03"
                android:background="@drawable/button_round"
                android:button="@drawable/icon_hide"
                android:padding="5dp"
                android:text="Hidden"
                android:textColor="@color/dark" />

            <ImageButton
                android:id="@+id/d_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_action_cancel" />
        </LinearLayout>

        <View
            android:id="@+id/d_divider_main_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/d_main_button"
            android:background="@color/black_transparent" />

        <LinearLayout
            android:id="@+id/d_second_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/d_divider_main_second"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/d_download_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/d_tab_header"
                android:button="@drawable/ic_action_download"
                android:checked="true"
                android:text="@string/emptyString2" />

            <CheckBox
                android:id="@+id/d_setting_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/d_tab_header"
                android:button="@drawable/ic_action_settings"
                android:checked="true"
                android:text="@string/emptyString2" />

            <CheckBox
                android:id="@+id/d_share_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/d_tab_header"
                android:button="@drawable/ic_action_share"
                android:checked="true"
                android:text="@string/emptyString2" />

            <CheckBox
                android:id="@+id/d_report_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.99"
                android:background="@drawable/d_tab_header"
                android:button="@drawable/ic_bug"
                android:checked="true"
                android:text="@string/emptyString2" />
        </LinearLayout>

        <View
            android:id="@+id/d_divider_second_content"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/d_second_button"
            android:background="@color/black_transparent" />

        <RelativeLayout
            android:id="@+id/d_download_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/d_divider_second_content"
            android:visibility="gone" >

            <TextView
                android:id="@+id/d_download_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Download canvas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/d_text_format"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/d_download_format"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/d_download_title"
                android:gravity="center_vertical"
                android:text="Format"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark" />

            <Spinner
                android:id="@+id/d_download_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/d_text_format" />

            <Button
                android:id="@+id/d_button_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_textbox_dark"
                android:gravity="center_vertical|center_horizontal|start"
                android:padding="4dp"
                android:text="Download"
                android:textAlignment="gravity"
                android:textColor="@color/dark" />

            <CheckBox
                android:id="@+id/d_checkbox_cropped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_download_format"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|start"
                android:text="cropped"
                android:textColor="@color/dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/d_share_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/d_divider_second_content"
            android:visibility="gone" >

            <TextView
                android:id="@+id/d_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Share canvas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/dark" />

            <ImageButton
                android:id="@+id/d_share_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_share_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:background="@drawable/share_facebook"
                android:src="@android:color/transparent" />

            <com.facebook.widget.LoginButton
                android:id="@+id/fb_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                facebook:confirm_logout="true"
                facebook:fetch_user_info="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>