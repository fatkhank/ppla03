<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="5dp"
    android:textAlignment="center" >

    <RelativeLayout
        android:id="@+id/d_parti_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/d_title" >

        <TextView
            android:id="@+id/d_text_parti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Participant"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/d_parti_list"
            android:layout_width="226dp"
            android:layout_height="174dp"
            android:layout_above="@+id/d_insert_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/d_text_parti" >
        </ListView>

        <EditText
            android:id="@+id/d_insert_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/d_add_user"
            android:layout_toLeftOf="@+id/d_add_user"
            android:inputType="textEmailAddress"
            android:text="Insert Email Here" />

        <ImageButton
            android:id="@+id/d_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_round"
            android:src="@drawable/ic_add_user" />

        <ProgressBar
            android:id="@+id/d_participant_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/d_parti_list"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/d_parti_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_round"
            android:text="Reload" />

        <TextView
            android:id="@+id/d_parti_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/d_parti_reload"
            android:layout_centerHorizontal="true"
            android:text="Failed to fetch list"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/d_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/d_setting_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/d_second_button"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/d_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Resize canvas"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/d_setting_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="x"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/d_button_resize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal|start"
                android:text="Resize" />

            <EditText
                android:id="@+id/d_width_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/d_setting_x"
                android:layout_weight="0.85"
                android:ems="10"
                android:imeOptions="actionDone|flagNoFullscreen"
                android:inputType="number" />

            <EditText
                android:id="@+id/d_height_input"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/d_width_input"
                android:layout_alignBottom="@+id/d_width_input"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/d_setting_x"
                android:layout_weight="0.47"
                android:ems="10"
                android:imeOptions="actionDone|flagNoFullscreen"
                android:inputType="number" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/d_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

            <ImageButton
                android:id="@+id/d_button_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.03"
                android:background="@drawable/button_round"
                android:src="@drawable/unhide" />

            <ImageButton
                android:id="@+id/d_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_action_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_second_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/d_main_button"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/d_download_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_topbar"
                android:button="@drawable/ic_action_download"
                android:checked="true" />

            <CheckBox
                android:id="@+id/d_setting_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checkbox_topbar"
                android:button="@drawable/ic_action_settings"
                android:checked="true" />

            <CheckBox
                android:id="@+id/d_share_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_action_share"
                android:checked="false"
                android:text="@string/emptyString2" />

            <CheckBox
                android:id="@+id/d_report_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emptyString2" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/d_download_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/d_second_button"
            android:visibility="visible" >

            <TextView
                android:id="@+id/d_text_format"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/d_download_format"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="Format"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/d_download_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/d_text_format" />

            <Button
                android:id="@+id/d_button_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_round"
                android:gravity="center_vertical|center_horizontal|start"
                android:text="Download"
                android:textAlignment="gravity" />

            <CheckBox
                android:id="@+id/d_checkbox_cropped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d_download_format"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|start"
                android:text="cropped" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/d_download_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/d_second_button"
            android:visibility="visible" >
            
            <ImageButton
                android:id="@+id/d_share_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_action_cancel" />
            
            <com.facebook.widget.LoginButton
        		android:id="@+id/fb_login_button"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="5dp"
        		facebook:confirm_logout="true"
        		facebook:fetch_user_info="true" />
		</RelativeLayout>
    </RelativeLayout>

</RelativeLayout>