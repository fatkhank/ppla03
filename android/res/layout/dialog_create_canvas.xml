<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:padding="8dp" >

    <TextView
        android:id="@+id/b_create_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/bc_create"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark" />

    <EditText
        android:id="@+id/b_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_create_name_label"
        android:imeOptions="flagNoFullscreen"
        android:inputType="text"
        android:textColor="@color/dark" />

    <TextView
        android:id="@+id/b_create_width_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b_create_width"
        android:layout_alignTop="@+id/b_create_width"
        android:gravity="center_vertical"
        android:text="@string/bc_width"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark" />

    <EditText
        android:id="@+id/b_create_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/b_create_name"
        android:layout_toRightOf="@+id/b_create_width_label"
        android:imeOptions="flagNoFullscreen"
        android:inputType="number"
        android:textColor="@color/dark" />

    <TextView
        android:id="@+id/b_create_height_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/b_create_height"
        android:layout_alignTop="@+id/b_create_height"
        android:gravity="center_vertical"
        android:text="@string/bc_height"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark" />

    <EditText
        android:id="@+id/b_create_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/b_create_width"
        android:layout_toRightOf="@+id/b_create_height_label"
        android:imeOptions="flagNoFullscreen"
        android:inputType="number"
        android:textColor="@color/dark" />

    <Button
        android:id="@+id/b_create"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_textbox_dark"
        android:text="@string/bc_create"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/dark" />

    <ProgressBar
        android:id="@+id/b_create_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>