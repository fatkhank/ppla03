<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start" >

    <com.ppla03.collapaint.CanvasView
        android:id="@+id/w_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/w_dashboard" />

    <LinearLayout
        android:id="@+id/w_top_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/w_dashboard"
        android:background="@drawable/w_topbar_left_normal"
        android:paddingRight="3dp" >

        <ImageButton
            android:id="@+id/w_show_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/round_button_small"
            android:contentDescription="@string/emptyString2"
            android:src="@drawable/ic_action_overflow" />

        <CheckBox
            android:id="@+id/w_main_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/round_checkbox_small"
            android:button="@drawable/ic_action_select_all"
            android:checked="true"
            android:text="@string/emptyString2" />

        <CheckBox
            android:id="@+id/w_main_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/round_checkbox_small"
            android:button="@drawable/ic_action_hand"
            android:checked="true"
            android:text="@string/emptyString2" />

        <ImageButton
            android:id="@+id/w_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/round_button_small"
            android:contentDescription="@string/emptyString2"
            android:src="@drawable/w_topbar_undo" />

        <ImageButton
            android:id="@+id/w_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/round_button_small"
            android:contentDescription="@string/emptyString2"
            android:src="@drawable/w_topbar_redo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/w_selection_pane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/w_dashboard"
        android:background="@drawable/w_topbar_right_normal"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingTop="2dp" >

        <ImageButton
            android:id="@+id/w_sel_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/round_button_small"
            android:src="@drawable/ic_action_cut" />

        <ImageButton
            android:id="@+id/w_sel_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_small"
            android:src="@drawable/ic_action_copy" />

        <ImageButton
            android:id="@+id/w_sel_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/round_button_small"
            android:src="@drawable/ic_action_move" />

        <ImageButton
            android:id="@+id/w_sel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/round_button_small"
            android:src="@drawable/ic_action_discard" />

        <CheckBox
            android:id="@+id/w_show_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/w_showprop"
            android:button="@drawable/ic_action_expand"
            android:checked="true"
            android:text="@string/emptyString2" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/w_property_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/w_selection_pane"
        android:background="@drawable/w_property_normal"
        android:padding="5dp"
        android:visibility="visible" >

        <include layout="@layout/w_property_pane" />
    </ScrollView>

    <ScrollView
        android:id="@+id/w_color_pane_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/w_selection_pane"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/w_property_scroll"
        android:background="@drawable/w_colorpane_normal"
        android:padding="5dp"
        android:visibility="visible" >

        <include layout="@layout/w_color_pane" />
    </ScrollView>

    <TextView
        android:id="@+id/w_canvas_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/w_dashboard"
        android:layout_toLeftOf="@+id/w_selection_pane"
        android:layout_toRightOf="@+id/w_top_button"
        android:background="@color/workspace_normal"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Untitled (hide mode)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible" />

</RelativeLayout>