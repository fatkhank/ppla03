<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start" >

    <RelativeLayout
        android:id="@+id/w_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light" >

        <ImageButton
            android:id="@+id/w_show_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <ImageButton
            android:id="@+id/w_main_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/w_show_dash"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_select_all" />

        <ImageButton
            android:id="@+id/w_main_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/w_main_select"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_group" />

        <ImageButton
            android:id="@+id/w_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/w_main_hand"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_undo" />

        <ImageButton
            android:id="@+id/w_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/w_undo"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_undo" />

        <ImageButton
            android:id="@+id/w_show_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_expand" />

        <ImageButton
            android:id="@+id/w_sel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/w_show_property"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_discard" />

        <ImageButton
            android:id="@+id/w_sel_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/w_sel_del"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_download" />

        <ImageButton
            android:id="@+id/w_sel_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:layout_toLeftOf="@+id/w_sel_move"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_copy" />

        <ImageButton
            android:id="@+id/w_sel_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/w_sel_copy"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_cut" />

        <TextView
            android:id="@+id/w_canvas_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="200dp"
            android:layout_toRightOf="@+id/w_redo"
            android:gravity="center_horizontal"
            android:text="Untitled"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <com.ppla03.collapaint.CanvasView
        android:id="@+id/w_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/w_topbar" />

    <ScrollView
        android:id="@+id/w_property_scroll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/w_canvas"
        android:layout_marginTop="-3dp"
        android:background="@drawable/shape_pane"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/w_property_pane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingRight="10dp" >

            <RelativeLayout
                android:id="@+id/w_prop_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/w_stroke_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:text="Stroke"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/w_stroke_width_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_stroke_color"
                    android:text="Width"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <SeekBar
                    android:id="@+id/w_stroke_width"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_stroke_width_label"
                    android:layout_toLeftOf="@+id/w_stroke_width_text"
                    android:max="72"
                    android:progress="1" />

                <TextView
                    android:id="@+id/w_stroke_width_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/w_stroke_width_label"
                    android:ems="3"
                    android:text="1" />

                <TextView
                    android:id="@+id/w_stroke_style_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_stroke_width"
                    android:text="Style"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/w_stroke_style"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_below="@+id/w_stroke_style_label"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/w_stroke_color"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/w_prop_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/w_prop_stroke"
                android:layout_marginBottom="10dp" >

                <Button
                    android:id="@+id/w_fill_color"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="right" />

                <CheckBox
                    android:id="@+id/w_fill_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Fill"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/w_prop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/w_prop_fill"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/w_font_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ToggleButton
                    android:id="@+id/w_font_bold"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toLeftOf="@+id/w_font_italic"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/bold"
                    android:checked="true"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <ToggleButton
                    android:id="@+id/w_font_italic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/w_font_underline"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/italic"
                    android:checked="true"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <ToggleButton
                    android:id="@+id/w_font_underline"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/top_bar_toggle"
                    android:button="@drawable/underline"
                    android:checked="true"
                    android:textOff="@string/emptyString2"
                    android:textOn="@string/emptyString2"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/w_font_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/w_font_underline"
                    android:imeOptions="actionDone|flagNoFullscreen"
                    android:inputType="text" >

                </EditText>

                <TextView
                    android:id="@+id/w_font_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/w_font_input"
                    android:text="Size"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <SeekBar
                    android:id="@+id/w_font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_font_size_label"
                    android:layout_toLeftOf="@+id/w_font_size_text"
                    android:max="50" />

                <TextView
                    android:id="@+id/w_font_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/w_font_size_label"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/w_font_style_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_font_size"
                    android:text="Font"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/w_font_style"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/w_font_style_label" />

                <TextView
                    android:id="@+id/w_font_color_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/w_font_style"
                    android:text="Color"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/w_font_color"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/w_font_style"
                    android:background="@android:color/holo_blue_dark" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>